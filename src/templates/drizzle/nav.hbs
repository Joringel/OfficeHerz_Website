{{!-- Nav item partial --}}
{{#*inline "nav-item"}}
  <a href="{{@root.baseurl}}/{{url}}" class="drizzle-Nav-item drizzle-Nav-item--ajax-js" data-slug="{{slug}}" data-url="{{@root.baseurl}}/{{url}}">
    {{label}}
  </a>
{{/inline}}

<div class="drizzle-Layout-nav drizzle-Nav" id="nav">

    <div class="drizzle-Nav-header">
        <a href="{{@root.baseurl}}/">
          <h3>Office Herz</h3>
          {{!-- {{> drizzle.logo}} --}}
        </a>
          <a class="drizzle-Nav-header-toggle" href="#nav">
            <svg viewBox="-1 -1 12 7" width="16" height="16">
              <polyline fill="none" stroke="currentColor" stroke-width="2" points="0 0 5 5 10 0"/>
            </svg>
          </a>
      </div>

  <div class="drizzle-Nav-main" id="nav-menu">
      <ul class="drizzle-Nav-menu">
         {{!-- Nav item partial
          <li>
            {{#with (page "index")}}
                {{> nav-item label=data.title}}
            {{/with}}
          </li>
          --}}
          <li>
              <a href="#" class="drizzle-Nav-item drizzle-Nav-item--collapse-js" data-slug="design">Design</a>
              <ul class="drizzle-Nav-menu">
                  {{#each (pages "design" sortby="order" ignore="index" sortby=order)}}
                    {{#unless data.hidden}}
                     <li>
                      {{> nav-item label=data.title slug=(toSlug data.title)}}
                    </li>
                    {{/unless}}
                  {{/each}}
              </ul>
          </li>
          <li>
              <a href="#" class="drizzle-Nav-item drizzle-Nav-item--collapse-js" data-slug="patterns">Patterns</a>
              <ul class="drizzle-Nav-menu">
                 <li>
                  {{!-- Atom Patterns --}}
                    <a href="#" class="drizzle-Nav-item drizzle-Nav-item--collapse-js atom" data-slug="atom">Atom</a>
                    <ul class="drizzle-Nav-menu">
                      {{#each (collections "atom")}}
                        <li>
                          {{> nav-item label=name slug=(toSlug name)}}
                        </li>
                      {{/each}}
                    </ul>
                </li>
                <li>
                    <a href="#" class="drizzle-Nav-item drizzle-Nav-item--collapse-js" data-slug="molecule">Molecule</a>
                    <ul class="drizzle-Nav-menu">
                      {{#each (collections "molecule")}}
                        <li>
                          {{> nav-item label=name slug=(toSlug name)}}
                        </li>
                      {{/each}}
                    </ul>
                </li>
                <li>
                    <a href="#" class="drizzle-Nav-item drizzle-Nav-item--collapse-js" data-slug="organism">Organism</a>
                    <ul class="drizzle-Nav-menu">
                      {{#each (collections "organism")}}
                        <li>
                          {{> nav-item label=name slug=(toSlug name)}}
                        </li>
                      {{/each}}
                    </ul>
                </li>
              </ul>
          </li>
          <li>
            {{#with (page "demos/index")}}
                  {{> nav-item label=data.title}}
            {{/with}}
          </li>

      </ul>

      <ul class="drizzle-Nav-menu drizzle-Nav-submenue">
        <li>
            <a href="#" class="drizzle-Nav-item drizzle-Nav-item--collapse-js" data-slug="help">Help</a>
            <ul class="drizzle-Nav-menu">
              {{#each (pages "help" sortby="order" ignore="index")}}
                <li>
                  {{> nav-item label=data.title}}
                </li>
              {{/each}}
            </ul>
          </li>
          <li>

          </li>
    </ul>
  </div>

</div>
